<SplashScreen>:
    name: 'splash_screen'
    canvas.before:
        
        Rectangle:
            pos: self.pos
            size: self.size
            source:'images/splash.png'
    MDScreen:
        MDFloatLayout:
            MDLabel:
                text: 'Fridgi'
                halign: 'center'
                pos_hint: {'center_x': .5, 'center_y': .7}
                font_style: 'H3'
                theme_text_color: 'Secondary'
            MDSpinner:
                size_hint: None, None
                size: dp(48), dp(48)
                pos_hint: {'center_x': .5, 'center_y': .5}
            MDLabel:
                text: 'Loading...'
                halign: 'center'
                pos_hint: {'center_x': .5, 'center_y': .4}
                font_style: 'H6'
                theme_text_color: 'Secondary'
            MDProgressBar:
                id: progress_bar
                value: 0
                max: 100
                size_hint: 0.8, None
                height: dp(4)
                pos_hint: {'center_x': .5, 'center_y': .3}




