<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        size: (400, 200)

        # Top Bar
        BoxLayout:
            size_hint_y: 0.1
            padding: 10
            spacing: 10

            # Add Food Button
            Button:
                text: 'Add Food'
                background_color:0, 0.7, 1, 1
                on_press: root.add_food()

            # Remove Food Button
            Button:
                text: 'Remove Food'
                background_color:0, 0.7, 1, 1
                on_press: root.remove_food()

            # Clear Fridge Button
            Button:
                text: 'Clear Fridge'
                background_color:0, 0.7, 1, 1
                on_press: root.clear_fridge()
       
       

        # Middle Section
        BoxLayout:
            size_hint_y: 0.8
            padding: 10
            spacing: 10
           

            # Food Options 1
            BoxLayout:
                orientation: 'vertical'
                spacing: 10
                pos_hint: {'x': 0.1, 'y': 0.1}

