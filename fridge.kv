                Button:
                    text: 'Cheese'
                    on_press: root.select_food('Cheese')
                    background_color: 1, 0.5, 0, 1

                # Food Option 3
                Button:
                    text: 'Vegetables'
                    on_press: root.select_food('Yogurt')
                    background_color: 1, 0.5, 0, 1
                # Food Option 4

                Button:
                    text: 'Fruits'
                    on_press: root.select_food('Yogurt')
                    background_color: 1, 0.5, 0, 1

         
            BoxLayout:
                orientation: 'vertical'
                spacing: 10
                pos_hint: {'x': 0.1, 'y': 0.1}

                Label:
                    text: 'Food Options 1'

                # Food Option 1
                Button:
                    text: 'Milk'
                    on_press: root.select_food('Milk')
                    background_color: 1, 0.5, 0, 1

                # Food Option 2
                Button:
                    text: 'Cheese'
                    on_press: root.select_food('Cheese')
                    background_color: 1, 0.5, 0, 1

                # Food Option 3
                Button:
                    text: 'Pickle'
                    on_press: root.select_food('Yogurt')
                    background_color: 1, 0.5, 0, 1
                # Food Option 4
                   
                Button:
                    text: 'curd'
                    on_press: root.select_food('Yogurt')
                    background_color: 1, 0.5, 0, 1
